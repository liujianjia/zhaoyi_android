<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip">

    <ImageView android:id="@+id/iv_avatar"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:scaleType="centerInside"
        android:src="@drawable/zy_home_icon_experience"
        />

    <TextView android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_avatar"/>

    <RatingBar android:id="@+id/rb_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rb_stars"
        android:layout_alignBottom="@id/rb_stars"
        android:layout_marginLeft="10dip"/>

    <TextView android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_stars"
        android:layout_alignLeft="@id/tv_name"/>
</RelativeLayout>
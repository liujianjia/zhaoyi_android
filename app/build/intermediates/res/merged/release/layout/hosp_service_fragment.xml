<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout android:id="@+id/ll_hosp_public_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dip">
        <ImageView android:id="@+id/iv_hos_public_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hosp_public_info"/>
        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:text="@string/hos_public_info"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/gray2"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
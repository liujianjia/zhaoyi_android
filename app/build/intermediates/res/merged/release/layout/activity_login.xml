<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/citylist_divider" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_actionbar">

        <ImageView android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:src="@drawable/abs__ic_ab_back_holo_dark"
            android:clickable="true"/>

        <TextView android:id="@+id/tv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="登录" />

        <TextView android:id="@+id/tv_find_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:textColor="@color/white"
            android:text="找回密码"
            android:clickable="true" />

        <ImageView android:id="@+id/ib_mines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_find_passwd"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:background="@drawable/widget_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:padding="15dip"
        android:background="@color/bg_table_subtitle">

        <EditText android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:hint="手机/用户名"
            android:textColorHint="@color/gray1"
            android:background="@drawable/bg_edit_selected"
            />

        <EditText android:id="@+id/et_userpwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_username"
            android:layout_marginTop="15dip"
            android:padding="15dip"
            android:hint="密码"
            android:textColorHint="@color/gray1"
            android:inputType="textPassword"
            android:background="@drawable/bg_edit_unselected"
            />


    </RelativeLayout>

    <Button android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="15dip"
        android:background="@drawable/bg_actionbar"
        android:text="登录"
        android:textColor="@color/white"
        android:onClick="onLogin"
        android:clickable="true" />

    <Button android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:text="免费注册"
        android:onClick="register"
        android:background="@null"
        android:textColor="@color/theme_default_color"/>

</LinearLayout>
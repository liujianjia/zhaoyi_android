<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/citylist_divider" >

    <!-- 头部导航 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_actionbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="0">
        <ImageView android:id="@+id/iv_reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:src="@drawable/abs__ic_ab_back_holo_dark"
            android:clickable="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dip"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView android:id="@+id/tv_reg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="4dip"
                android:textColor="@android:color/white"
                android:text="注册"/>
        </RelativeLayout>


    </LinearLayout>

    <!-- 注册界面 -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/citylist_divider" >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/background_color">

            <!-- 根据注册进度改变字体颜色 -->
            <TextView android:id="@+id/tv_register_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="1 输入手机号码"
                android:textColor="@color/action_bar_disable"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_marginLeft="5dip"/>
            <TextView android:id="@+id/tv_register_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="2 输入验证码"
                android:textColor="@color/abs__bright_foreground_disabled_holo_light"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_marginLeft="5dip"/>
            <TextView android:id="@+id/tv_register_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="3 完善资料"
                android:textColor="@color/abs__bright_foreground_disabled_holo_light"/>
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:background="@color/abs__bright_foreground_holo_dark"
            android:layout_margin="20dip"
            android:gravity="center">
            <EditText android:id="@+id/et_userphone"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_gravity="center"
                android:hint="@string/enter_phone_number"
                android:textColor="@color/black2"
                android:textColorHint="@color/gray1"
                android:background="@drawable/bg_edit_selected"
                />
            <Button android:id="@+id/btn_getauth"
                android:layout_width="70dip"
                android:layout_height="30dip"
                android:layout_marginRight="15dip"
                android:layout_gravity="center"
                android:hint="@string/get_auth_code"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="10sp"
                android:background="@color/action_bar_disable"/>
        </LinearLayout>

        <Button android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:background="@color/abs__bright_foreground_disabled_holo_light"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="20dip"
            android:text="下一步"
            android:textColor="@color/white"
            android:clickable="false"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dip">

    <ImageView android:id="@+id/iv_doctor_pic"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:scaleType="centerCrop"/>

    <TextView android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_doctor_pic"
        android:textSize="18sp"
        android:textColor="@color/black1"
        android:text="name"/>

    <ImageView android:id="@+id/iv_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_doctor_pic"
        android:layout_alignBottom="@id/iv_doctor_pic"
        android:layout_marginLeft="10dip"
        android:src="@drawable/zy_department"/>
    <TextView android:id="@+id/tv_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_dep"
        android:layout_alignBottom="@id/iv_dep"
        android:layout_marginLeft="10dip"
        android:textSize="13sp"
        android:textColor="@color/gray1"/>
    <ImageView android:id="@+id/iv_hosp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_dep"
        android:layout_alignBottom="@id/tv_dep"
        android:layout_marginLeft="10dip"
        android:src="@drawable/zy_hosp_type"/>
    <TextView android:id="@+id/tv_hosp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_hosp"
        android:layout_alignBottom="@id/iv_hosp"/>

    <ImageView android:id="@+id/iv_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_dep"
        android:layout_above="@id/iv_dep"
        android:src="@drawable/zy_star"/>
    <TextView android:id="@+id/tv_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_stars"
        android:layout_alignBottom="@id/iv_stars"
        android:layout_marginLeft="10dip"
        />
    <ImageView android:id="@+id/iv_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_stars"
        android:layout_alignBottom="@id/tv_stars"
        android:layout_marginLeft="10dip"
        android:src="@drawable/zy_hosp_appointment"/>
    <TextView android:id="@+id/tv_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_appointment"
        android:layout_alignBottom="@id/iv_appointment"
        />
    <ImageView android:id="@+id/iv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_appointment"
        android:layout_alignBottom="@id/tv_appointment"
        android:layout_marginLeft="10dip"
        android:src="@drawable/zy_hosp_level"/>
    <TextView android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_level"
        android:layout_alignBottom="@id/iv_level"
        android:textSize="13sp"
        android:textColor="@color/gray1"/>
</RelativeLayout>